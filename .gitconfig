[user]
	name = Kiril Savino
	email = kiril@gamechanger.io

[core]
        excludesfile = ~/.gitignore
	editor = emacs
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
	ui = always

[color "branch"]
       local = yellow
       remote = green

[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold

[github]
        user = kiril
        token = 8659603ac312ddcbb280b274f54ba81b

[alias]
	co = checkout
	pr = pull-request
        st = status
        w = whatchanged
        cp = cherry-pick
        ca = commit -a
        au = add -u
        whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short

[rerere]
        enabled = true

[help]
	autocorrect = 1
